@model SupermarketManagement.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Category</h2>
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="CategoryID" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <br\>
            <div class="form-group">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.CategoryID" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

