@model SupermarketManagement.Models.Receipt_Detail
@{
    ViewData["Title"] = "EditReceiptDetail";
}

<br />
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input hidden asp-for="Receipt_DetailID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductID"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductID" class="form-control" />
                </div>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Amount"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Amount" class="form-control" />
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ExpiryDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ExpiryDate" class="form-control" />
                </div>
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ManufactureDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ManufactureDate" class="form-control" />
                </div>
                <span asp-validation-for="ManufactureDate" class="text-danger"></span>
            </div>

            <br\>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" asp-route-id="@Model.Receipt_DetailID" value="Update" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

