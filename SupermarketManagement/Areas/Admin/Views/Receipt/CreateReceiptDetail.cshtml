@model SupermarketManagement.Models.ViewModel.ReceiptDetailModel
@{
    ViewData["Title"] = "CreateReceiptDetail";
}

<br />
<form method="post" asp-action="CreateReceiptDetail">
    <div class="p-4 border rounded row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Receipt_Detail.ProductID"></label>
                </div>
                <div class="col-8">
                    <input id="ProductID" asp-for="Receipt_Detail.ProductID" class="form-control" />
                </div>
                <span asp-validation-for="Receipt_Detail.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Receipt_Detail.Amount"></label>
                </div>
                <div class="col-8">
                    <input id="ProductAmount" asp-for="Receipt_Detail.Amount" class="form-control" />
                </div>
                <span asp-validation-for="Receipt_Detail.Amount" class="text-danger"></span>
            </div>
        </div>
        <div class=" col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Receipt_Detail.ExpiryDate"></label>
                </div>
                <div class="col-8">
                    <input id="ProductAmount" asp-for="Receipt_Detail.ExpiryDate" class="form-control" />
                </div>
                <span asp-validation-for="Receipt_Detail.ExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Receipt_Detail.ManufactureDate"></label>
                </div>
                <div class="col-8">
                    <input id="ProductAmount" asp-for="Receipt_Detail.ManufactureDate" class="form-control" />
                </div>
                <span asp-validation-for="Receipt_Detail.ManufactureDate" class="text-danger"></span>
            </div>
        </div>

        <br\>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create" id="button" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
    </div>
</form>

<div>

    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Receipt_Detail.ManufactureDate)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model.Receipt_Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ManufactureDate)
                </td>
                <td>
                    <partial name="_TableButtonForReceiptDetail" model="item.Receipt_DetailID" />
                </td>
            </tr>
        }
    </table>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

