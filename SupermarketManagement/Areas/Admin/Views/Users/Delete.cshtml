@model SupermarketManagement.Models.User
@using SupermarketManagement.Extensions

<br />
<h2 class="text-info">Delete Staff</h2>
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="StaffID " />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StaffID"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StaffID" readonly class="form-control" />
                </div>
            </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Staff.FullName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Staff.FullName" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PassWord"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PassWord" readonly class="form-control" />
                    </div>
                </div>
                <br\>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" asp-route-id="@Model.StaffID" value="Delete" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
            </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

