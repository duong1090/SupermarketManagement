@model IEnumerable<SupermarketManagement.Models.User>
@{
    ViewData["Title"] = "User";
}



<br />
<br />


<div class="row">
    <div class="col-6">
        <h2 class="text-info">User</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New User</a>
    </div>
</div>

<br />
<div>
    <form asp-controller="Products" asp-action="Index" method="get">
        <p>
            Name: <input type="text" name="SearchString">
            <input hidden type="submit" value="Filter" />
            ID: <input type="text" name="SearchID">
            <input hidden type="submit" value="Filter" />
        </p>
    </form>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.StaffID)
              
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Staff.FullName)
            </th>           
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.StaffID)                  
                </td>
                <td>
                    @Html.DisplayFor(m => item.Staff.FullName)
                </td>                
                <td>
                    <partial name="_TableButtonPartial" model="item.StaffID" />
                </td>
            </tr>
        }
    </table>
</div>

