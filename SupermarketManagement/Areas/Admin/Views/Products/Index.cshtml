@model IEnumerable<SupermarketManagement.Models.Product>
@{
    ViewData["Title"] = "Index";
}



<br />
<br />


<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product</a>
    </div>
</div>

<br />
<div>
    <form asp-controller="Products" asp-action="Index" method="get">
        <p>
            Name: <input type="text" name="SearchString">
            <input hidden type="submit" value="Filter" />
            ID: <input type="text" name="SearchID">
            <input hidden type="submit" value="Filter" />
        </p>
    </form>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Status)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Producer)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Producer)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.ProductID" />
                </td>
            </tr>
        }
    </table>
</div>

