@model SupermarketManagement.Models.ViewModel.ProductsViewModel
@using SupermarketManagement.Extensions


<br />
<h2 class="text-info">Product Details</h2>

    <div class="p-4 border rounded">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>              
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>              
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Status"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" readonly class="form-control" asp-for="Products.Status" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Category"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Category.CategoryName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Amount"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Amount" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Producer"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Producer" readonly class="form-control" />
                </div>                
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">

        </div>
        <br\>
            <div class="form-group">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.ProductID">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
    </div>

