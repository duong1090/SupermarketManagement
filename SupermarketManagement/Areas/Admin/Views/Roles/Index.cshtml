@model IEnumerable<SupermarketManagement.Models.Role>
@{
    ViewData["Title"] = "Index";
}



<br />
<br />


<div class="row">
    <div class="col-6">
        <h2 class="text-info">Role</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Role</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.RoleName)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.RoleName)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.RoleID" />
                </td>
            </tr>
        }
    </table>
</div>

